@{
    ViewBag.Title = "शैक्षणिक सहल";
    Layout = "~/Views/Shared/_LayoutWebsite.cshtml";
}
<div class="full-widht-bread">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-8">
                <nav aria-label="breadcrumb-sm">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">@Html.ActionLink("मुखपृष्ठ", "Index", "Home")</li>
                        <li class="breadcrumb-item active" aria-current="page">विभाग</li>
                        <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>

                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="full-widht-pagedata">
    <div class="container container-bg padding-bottom-15 padding-top-15">
        <div class="row">

            <div class="col-lg-8 col-xm-12 col-md-8 col-sm-12 card p-0">
                <div class="card-header font-weight-bold">
                    शैक्षणिक सहल विभाग
                </div>
                <img src="~/img/departments/school_trip.png" class="title-image" />

                <div class="col title-para">&nbsp; <br /> <strong></strong> </div>
                <div class="col">
                    <p class="text-justify">
                        विद्यालयामध्ये विद्यार्थ्यांना आजूबाजूच्या गोष्टींची माहिती होण्यासाठी परिसराचे निरीक्षण करण्यासाठी परिसर निरीक्षण सहलीचे आयोजन करण्यात येते.
                        तसेच जागतिक वारसा लाभलेल्या कास पठार या ठिकाणी निसर्ग निरीक्षण सहल आयोति केली जाते.
                        तसेच वर्षातून एकदा शैक्षणिक सहलितचे आयोजन केले जाते. यामधून विद्यार्थ्यांना ऐतिहासिक व भैगोलिक माहिती मिळण्यास मदत होते.
                    </p>
                </div>
            </div>
            <div class="col-lg-4 col-xm-12 col-md-4 col-sm-12">
                @Html.Partial("_nofitications")
            </div>
        </div>

    </div>
</div>



