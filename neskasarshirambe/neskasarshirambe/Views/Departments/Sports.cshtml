@{
    ViewBag.Title = "क्रीडा विभाग";
    Layout = "~/Views/Shared/_LayoutWebsite.cshtml";
}
<div class="full-widht-bread">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-8">
                <nav aria-label="breadcrumb-sm">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">@Html.ActionLink("मुखपृष्ठ", "Index", "Home")</li>
                        <li class="breadcrumb-item active" aria-current="page">विभाग</li>
                        <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>

                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="full-widht-pagedata">
    <div class="container container-bg padding-bottom-15 padding-top-15">
        <div class="row">

            <div class="col-lg-8 col-xm-12 col-md-8 col-sm-12 card p-0">
                <div class="card-header font-weight-bold">
                    क्रीडा विभाग
                </div>
                <img src="~/img/departments/sports.png" class="title-image" />

                <div class="col title-para">&nbsp; <br /> <strong></strong> </div>
                <div class="col">
                    <p class="text-justify">
                        विद्यार्थ्यच्या शारीरिक विकासासाठी सूर्यनमस्कार, प्राणायाम, कवायत, 
                        झांजपथक योगासने इ उपक्रम राबवले जातात 
                        तसेच संस्थांन्तर्गत क्रीडा स्पर्धा उन्हाळी क्रीडा प्रशिक्षण सलग 15 दिवस घेतले जाते.
                        यामध्ये क्रिकेट व्हॅलिबॉल बुद्धिबळ कॉरम अॅथ्लेटिक्स इ मार्गदर्शन केले जाते तसेच पोषक आहार दिला जातो.
                    </p>
                </div>

            </div>
            <div class="col-lg-4 col-xm-12 col-md-4 col-sm-12">
                @Html.Partial("_nofitications")
            </div>
        </div>

    </div>
</div>




