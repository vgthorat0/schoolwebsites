@{
    ViewBag.Title = "क्रीडा विभाग";
    Layout = "~/Views/Shared/_LayoutWebsite.cshtml";
}
<div class="full-widht-bread">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-8">
                <nav aria-label="breadcrumb-sm">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">@Html.ActionLink("मुखपृष्ठ", "Index", "Home")</li>
                        <li class="breadcrumb-item active" aria-current="page">विभाग</li>
                        <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>

                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="full-widht-pagedata">
    <div class="container container-bg padding-bottom-15 padding-top-15">
        <div class="row">

            <div class="col-lg-8 col-xm-12 col-md-8 col-sm-12 card p-0">
                <div class="card-header font-weight-bold">
                    क्रीडा विभाग
                </div>
                <img src="~/img/departments/play_ground.PNG" class="title-image" />

                <div class="col title-para">&nbsp; <br /> <strong></strong> </div>
                <div class="col">
                    <p class="text-justify">
                        आदर्श क्रीडा संस्था, कराड यांचेमार्फत वर्षभर विविध क्रीडा प्रकारांचा मोफत सराव तसेच उन्हाळी व दिवाळी सुट्टीत खेळाडूंसाठी खास प्रशिक्षण वर्ग मोफत आयोजन करून 
                        तज्ञ क्रीडा शिक्षकांचेकडून विविध क्रीडा प्रकारांचा सराव करून घेतला जातो व प्रशिक्षणार्थीना मोफत अल्पोपहार दिला जातो.
                        आमच्या विद्यालयातील खेळाडूंची सलग दोन वर्षे वेटलिफ्टिंग व रनिंग या खेळासाठी राष्ट्रीय पातळीवर निवड झाली आहे.
                    </p>
                </div>
            </div>
            <div class="col-lg-4 col-xm-12 col-md-4 col-sm-12">
                @Html.Partial("_nofitications")
            </div>
        </div>

    </div>
</div>




