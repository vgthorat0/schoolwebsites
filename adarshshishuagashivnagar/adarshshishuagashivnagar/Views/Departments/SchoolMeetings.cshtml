@{
    ViewBag.Title = "शालेय सभा";
    Layout = "~/Views/Shared/_LayoutWebsite.cshtml";
}
<div class="full-widht-bread">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-8">
                <nav aria-label="breadcrumb-sm">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">@Html.ActionLink("मुखपृष्ठ", "Index", "Home")</li>
                        <li class="breadcrumb-item active" aria-current="page">विभाग</li>
                        <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>

                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="full-widht-pagedata">
    <div class="container container-bg padding-bottom-15 padding-top-15">
        <div class="row">

            <div class="col-lg-8 col-xm-12 col-md-8 col-sm-12 card p-0">
                <div class="card-header font-weight-bold">
                    महत्वाच्या शालेय सभा
                </div>
                <img src="~/img/Departments/school_mettings.png" class="title-image" />

                <div class="col title-para">&nbsp; <br /> <strong></strong> </div>
                <div class="col">
                    <p class="text-justify">
                        <strong>शिक्षक सभा</strong>
                    </p>
                    <p class="text-justify">
                        शिक्षंकांच्यामध्ये विचारांचे आदान प्रदान होण्यासाठी तसेच शाळेच्या गुंवत्तेविषयीची चर्चा व पुढील ध्येयधोरणे ठरवण्यासाठी शिक्षक सभा आयोजित केल्या जातात.<br />
                        सदर शैक्षणिक वर्षात ११ शिक्षक सभा घेण्यात आल्या. तसेच दर आठवड्याच्या सोमवारी शिक्षक सहविचार सभा घेण्यात आल्या.
                        मुख्याध्यापकांच्या अध्यक्षतेखाली शिक्षक सभा घेतल्या जातात.
                    </p>
                    <p class="text-justify">
                        <strong>पालक सभा</strong>
                    </p>
                    <p class="text-justify">
                        पालकांचे शंका निरसन होण्यासाठी तसेच शालेय नियोजन प्रगती इ. माहिती पालकांपर्यंत पोहचवण्यासाठी आणि शिक्षक–पालक यांच्यात सुसंवाद साधण्यासाठी
                        प्रथम सत्रात दोन आणि द्वितीय सत्रात दोन अशा पालक सभा आयोजित केल्या.
                    </p>
                    <p class="text-justify">
                        <strong>शालेय समिती सभा</strong>
                    </p>
                    <p class="text-justify">
                        शाळा संस्था यांच्यात विचारांची देवाण घेवाण  होण्यासाठी शालेय समिती सभा घेतल्या जातात. सदर शैक्षणिक वर्षात ११ शालेय समिती सभा झाल्या.
                    </p>

                    <p class="text-justify">
                        <strong>बाल सभा व प्रश्न मंजूषा </strong>
                    </p>
                    <p class="text-justify">
                        विद्यार्थ्यांच्या बुद्धीला चालना देण्यासाठी व सामान्यदज्ञान वाढीसाठी दर महिन्याच्या शेवटी बाल सभा व प्रश्नमंजुषा स्पर्धा आयोजित केल्या जातात.
                    </p>
                    
                    

                </div>
            </div>
            <div class="col-lg-4 col-xm-12 col-md-4 col-sm-12">
                @Html.Partial("_nofitications")
            </div>
        </div>

    </div>
</div>



