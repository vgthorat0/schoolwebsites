
@{
    Layout = null;
}
<!-- Slider start -->
<div class="full-widht menu-bg">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
            <li data-target="#myCarousel" data-slide-to="4"></li>
            <li data-target="#myCarousel" data-slide-to="5"></li>
            <li data-target="#myCarousel" data-slide-to="6"></li>
        </ol>
        <div class="carousel-inner">

            <div class="carousel-item active"  data-interval="4000">
                <img src="\img\slide01.png" alt="Bootstrap Touch Slider" class="slide-image">
                <div class="slider-bullet-container slide-text  slide_middle_left">
                    <div class="slider-bullet-text animated delay-1s bounceInDown"> Beautiful School Building</div>
                    <div class="slider-bullet-text animated delay-2s bounceInDown">Play ground</div>
                </div>
            </div>

            <div class="carousel-item">
                <img src="\img\slide02.png" alt="Bootstrap Touch Slider" class="slide-image">
                <div class="slider-bullet-container slide-text  slide_middle_left">
                    <div class="slider-bullet-text animated delay-1s bounceInDown"> Computer Lab and Digital Classroom </div>
                    <div class="slider-bullet-text animated delay-2s bounceInDown">Library </div>
                </div>
            </div>

            <div class="carousel-item">
                <img src="\img\slide03.png" alt="Bootstrap Touch Slider" class="slide-image">
                <div class="slider-bullet-container slide-text  slide_middle_left">
                    <div class="slider-bullet-text animated delay-1s bounceInUp"> School Bus at doorstep</div>
                    <div class="slider-bullet-text animated delay-2s bounceInDown">Clean Water for Students</div>
                </div>
            </div>


            <div class="carousel-item">
                <img src="\img\slide04.png" alt="Bootstrap Touch Slider" class="slide-image">
                <div class="slider-bullet-container slide-text  slide_middle_left">
                    <div class="slider-bullet-text animated delay-1s bounceInDown"> Library with Study Room </div>
                </div>
            </div>

            <div class="carousel-item">
                <img src="\img\slide05.png" alt="Bootstrap Touch Slider" class="slide-image">
                <div class="slider-bullet-container slide-text  slide_middle_left">
                    <div class="slider-bullet-text animated delay-1s bounceInDown"> Well Equipped Laboratories</div>
                </div>
            </div>

            <div class="carousel-item">
                <img src="\img\slide06.png" alt="Bootstrap Touch Slider" class="slide-image">
                <div class="slider-bullet-container slide-text  slide_middle_left">
                    <div class="slider-bullet-text animated delay-1s bounceInDown"> highly qualified teaching staff </div>
                </div>
            </div>


            <div class="carousel-item">
                <img src="\img\slide07.png" alt="Bootstrap Touch Slider" class="slide-image">
                <div class="slider-bullet-container slide-text  slide_middle_left">
                    <div class="slider-bullet-text animated delay-1s bounceInDown"> We care for student </div>
                    <div class="slider-bullet-text animated delay-1s bounceInDown"> Monitoring students and teachers helps us to improve</div>
                    <div class="slider-bullet-text animated delay-1s bounceInDown"> CCTV  surveillance in schools </div>
                </div>
            </div>








        </div>
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
